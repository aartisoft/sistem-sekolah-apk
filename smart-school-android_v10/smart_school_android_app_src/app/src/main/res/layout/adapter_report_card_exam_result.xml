<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.45"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/adapter_reportCard_examResult_subjectNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="0.3"
                android:text="subject name"
                />

            <TextView
                android:id="@+id/adapter_reportCard_examResult_passingmarksTV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:layout_weight="0.7"
                android:text="Passing marks"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.55"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/adapter_reportCard_examResult_marksObtainedTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="0.35"
                android:text="marks obtained"
                />

            <TextView
                android:id="@+id/adapter_reportCard_examResult_resultTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.65"
                android:gravity="end"
                android:padding="5dp"
                android:textStyle="bold"
                android:text="status"
                />

        </LinearLayout>


</LinearLayout>